{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <h1>Курс</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Уроки</th>
                <td><ul>{% for lesson in lessons %}
                    <li>{{lesson.number}}<a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
                {% endfor %}</ul></td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_lesson_new', {'course': course.id}) }}">Добавить урок</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить</a>

    {{ include('course/_delete_form.html.twig') }}

    <a href="{{ path('app_course_index') }}">Вернутся к списку курсов</a>

{% endblock %}
