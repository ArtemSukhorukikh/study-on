{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }}{% endblock %}

{% block body %}
    <h1>{{lesson.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Курс</th>
                <td><a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a></td>
            </tr>
            <tr>
                <th>Номер урока</th>
                <td>{{ lesson.number }}</td>
            </tr>
            <tr>
                <th>Содержимое урока</th>
                <td>{{ lesson.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Изменить</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
