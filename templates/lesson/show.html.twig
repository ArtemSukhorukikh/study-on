{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }}{% endblock %}

{% block body %}
    <h1>{{lesson.name}}</h1>
    <a class="fs-3" href="{{ path('app_course_show', {'id': lesson.course.id}) }}">Курс {{ lesson.course.name }}</a><br/>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="d-flex d-inline-flex">
        <a class="btn btn-outline-secondary my-3 ml-2" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Изменить</a>
        {{ include('lesson/_delete_form.html.twig') }}
    </div>
    {% endif %}
    <h4>Содержание урока</h4>
    <p>{{ lesson.content }}</p>

{% endblock %}
