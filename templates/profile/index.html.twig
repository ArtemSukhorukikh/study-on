{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="container pt-5">
    <section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <h2 class="dark-color">Профиль</h2>
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Эл.Почта</label>
                                        <p>{{ userName }}</p>
                                    </div>
                                    <div class="media">
                                        <label>Баланс</label>
                                        <p>{{ userBalance }}</p>
                                    </div>
                                    <div class="media">
                                        <label>Роль</label>
                                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                                            <p>Суперпользователь</p>
                                        {% else %}
                                            <p>Пользователь</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                            <img class="w-50 h-50" src="https://www.svgrepo.com/show/106784/avatar.svg" title="" alt="">
                        </div>
                    </div>
                </div>
            </div>
    </section>
</div>
{% endblock %}
